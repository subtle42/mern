{
    "compilerOptions": {
        "watch": false,
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "jsx": "react",
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths":{
            "data/*": ["./client/data/*"],
            "common/*": ["./common/*"]
        },
        "outDir": "./.out",
        "types": ["@wdio/sync", "@wdio/mocha-framework"]
    },
    "include": [
        "./server/**/*.ts",
        "./client/**/*.tsx",
        "./client/**/*.ts",
        "./integration/**/*.ts",
        "./e2e/**/*.ts",
        "./common/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}